    <main>
        <div class="recipe-container">
            <h1><%= username %>'s Favorite Recipes</h1>
            <ul class="recipe-list">
                <% if (favoriteRecipes.length === 0) { %>
                    <li class="no-recipes">No favorite recipes yet</li>
                <% } else { %>
                    <% favoriteRecipes.forEach(recipe => { %>
                        <li class="recipe-item" data-recipe-id="<%= recipe.recipeId %>">
                            <a href="/results/recipe/?recipe=<%=recipe.recipeId%>">
                                <div class="recipe-image">
                                    <img 
                                        src="<%= recipe.recipeImage %>" 
                                        alt="<%= recipe.recipeLabel %>"
                                    >
                                </div>
                                <div class="recipe-text">
                                    <div class="recipe-title">
                                        <h2 class="recipe-label"><%= recipe.recipeLabel %></h2>
                                    </div>
                                    <div class="recipe-filler">
                                        <p>Calories: <%= recipe.recipeCalories %></p>
                                        <p>Added on: <%= new Date(recipe.addedAt).toLocaleDateString() %></p>
                                    </div>
                                </div>
                            </a>
                            <span onclick="deleteRecipe('<%= recipe.recipeId %>')" class="delete-btn"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#EFEFEF"><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/></svg></span>
                        </li>
                    <% }) %>
                <% } %>
            </ul>
            
        </div>
